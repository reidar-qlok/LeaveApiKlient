@model LeaveApiClient.Models.Employee
<h2>Employee details</h2>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.EmployeeId
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.EmployeeName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.EmployeeId">Edit</a>
    <a asp-action="Index" class="btn btn-success">Back to list</a>
</div>