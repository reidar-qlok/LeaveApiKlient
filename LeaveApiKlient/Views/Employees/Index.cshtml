@using LeaveApiClient.Models
@model List<Employee>
<h1>Employees</h1>
<a asp-action="Create" class="btn btn-primary">Add a new employee</a>
@if(Model.Any())
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeName</td>
                <td>@employee.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@employee.EmployeeId" class="btn btn-primary">Details</a>
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No employees in the database</p>
}
